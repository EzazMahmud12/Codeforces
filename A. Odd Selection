#include<bits/stdc++.h>
using namespace std;
#define e4 ios_base::sync_with_stdio(false); cin.tie(NULL)
#define endl '\n'
#define ll  long long
#define test_case int tc;cin>>tc;while(tc--)


int main() {


		e4;

		test_case{
 
		int i,n,x;
 
		cin>>n>>x;
 
		int odd=0,even=0,sum=0;
 
		for(i=0; i<n; i++){
			int a;
 
			cin>>a;
			sum+=a;
			if(a%2){
				odd++;
			}
			else{
				even++;
			}
		}
 
		if(odd==0) cout<<"No"<<endl;
 		else if(odd==n){

 			if(x%2) cout<<"Yes"<<endl;
 			else cout<<"No"<<endl;
 		}
		else if(x==n){
			if(sum%2) cout<<"Yes"<<endl;
			else cout<<"No"<<endl;
		}
 
		else cout<<"Yes"<<endl;
 
	}



		
}

	
