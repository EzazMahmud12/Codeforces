#include<bits/stdc++.h>
using namespace std;
#define e4 ios_base::sync_with_stdio(false); cin.tie(NULL)
#define endl '\n'
#define ll  long long
#define test_case int tc;cin>>tc;while(tc--)


int main() {


		e4;

		int i;

		string s1,s2;

		cin>>s1>>s2;

		if(s1.size()!=s2.size()) cout<<"NO";

		else{
			string ans1,ans2;

			for(i=0; i<s1.size(); i++){
				if(s1[i]!=s2[i]){
					ans1+=s1[i];
					ans2+=s2[i];
				}
			}

			sort(ans1.begin(),ans1.end());
			sort(ans2.begin(),ans2.end());

			if(ans1.size()==2 && ans1==ans2) cout<<"YES";
			else cout<<"NO";
		}


	
}

	
