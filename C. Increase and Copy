#include<bits/stdc++.h>
using namespace std;
#define e4 ios_base::sync_with_stdio(false); cin.tie(NULL)
#define endl '\n'
#define ll  long long
#define test_case int tc;cin>>tc;while(tc--)


int main() {


			e4;

			test_case{

			ll n,i;

			ll ans=INT_MAX;

			cin>>n;

			for(i=1; i*i<=n; i++){

				ans=min(ans,((i-1)+((n-1)/i)));
			}

			cout<<ans<<endl;

		}


			
}

	
		    //            S m o t h e r e d  M a t e !!		 //	
