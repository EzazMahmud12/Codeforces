#include<bits/stdc++.h>
using namespace std;
#define e4 ios_base::sync_with_stdio(false); cin.tie(NULL)
#define endl '\n'
#define ll  long long
#define test_case int tc;cin>>tc;while(tc--)


int main() {


		 e4;

		 test_case{
		
		 ll i,sum=0;

		 string s;

		 cin>>s;

		 vector<int> ans;

		 for(i=0; i<s.size(); i++){
		 	if(s[i]=='1'){
		 		ans.push_back(1);
		 	}
		 	else{
		 		
		 		if(!ans.empty()) sum+=(ans.size())+1;
		 	}
		 }


		 cout<<sum<<endl;

		}



		
}

			
