#include<bits/stdc++.h>
using namespace std;
#define e4 ios_base::sync_with_stdio(false); cin.tie(NULL)
#define endl '\n'
#define ll  long long
#define test_case int tc;cin>>tc;while(tc--)


int main() {


		e4;

		test_case{
		ll x,y,n;
 
		cin>>x>>y>>n;
 
		ll r;
 
		r=n%x;
 
		if(r<y)cout<<n-r-(x-y)<<endl;
		else{
			cout<<n-(r-y)<<endl;
		}
 
 
}

			
}

	
