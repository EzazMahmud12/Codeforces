#define test_case int tc;cin>>tc;while(tc--)


int main() {


			e4;

			int i,n;

			cin>>n;

			map<int,int> mp;

			for(i=0; i<n; i++){
				int a;

				cin>>a;
				mp[a]++;
			}

			for(auto it:mp){
				if(it.second>(n+1)/2){
					cout<<"NO";
					return 0;
				}
			}

			
		 	cout<<"YES";
			
			
