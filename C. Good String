#include<bits/stdc++.h>
using namespace std;
#define e4 ios_base::sync_with_stdio(false); cin.tie(NULL)
#define endl '\n'
#define ll  long long
#define test_case int tc;cin>>tc;while(tc--)


int main() {

		 e4;

		int i,n;

		cin>>n;

		string s,ans;

		cin>>s;	

		for(i=0; i<n;){
			if(i+1<n && s[i]!=s[i+1]){
				ans+=s[i];
				ans+=s[i+1];
				i+=2;
			}
			else{
				i++;
			}
		}

		cout<<s.size()-ans.size()<<endl<<ans;


}

		



